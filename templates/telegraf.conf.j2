#Ansible
[agent]
  hostname = "{{ inventory_hostname }}"
  omit_hostname = false
  interval = "120s"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  logfile = "/var/log/telegraf/telegraf.log"
  debug = false
  quiet = false

# OUTPUTS:
[[outputs.influxdb]]
  database = "telegraf"
  urls = ["http://{{ influxdb_server_ip }}:8086"]

# INPUTS:
[[inputs.cpu]]
  percpu = true
  totalcpu = true
